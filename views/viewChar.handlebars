<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href ="database.css">
</head>
<h3>Current people:</h3>
<a href=" /index.html"> Home </a>
<table>
    <thead> 
        <th>ID</th>
        <th>First Name</th> 
        <th>Last Name</th>
        <th>Alias</th> 
        <th>Race</th>
        <th>Location</th>  
    </thead> 
    <tbody>
        {{#each people}} 
        <tr> 
            <td>{{ID}}</td>
            <td>{{FName}}</td> 
            <td>{{LName}}</td> 
            <td>{{Alias}}</td>
            <td>{{Race}}</td> 
            <td>{{City}}, {{Region}}</td>
            <td><button onclick="deletePerson({{ID}})">Delete</button></td>
            <td><a href="/viewChar/{{ID}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
